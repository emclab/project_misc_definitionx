<% if  @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<h4><%=@title %></h4>
<%= simple_form_for(@misc_definition) do |f| %> 
  <%= f.input :name, :label => t('Name') %>
  <%= f.input :desp, :label => t("Description"), :input_html => {:rows => 2} %> 
  <%= f.input :definition_category, :input_html => {:value => @definition_category}, :as => :hidden %>
  <%= f.input :ranking_index, :label => t('Ranking Index'), :placehoder => '1, 2, 3 ...'%> 
  
  <%= link_to t('Back'), misc_definitions_path(:definition_category => @definition_category, :subaction => @definition_category, :resource_id => @misc_definition.resource_id, :resource_string => @misc_definition.resource_string), :class => BUTTONS_CLS['action'] if has_action_right?('index_'+ @definition_category, params[:controller]) %>
  <%= link_to t('Back'), misc_definitions_path(:definition_category => @definition_category, :resource_id => @misc_definition.resource_id, :resource_string => @misc_definition.resource_string), :class => BUTTONS_CLS['action'] if has_action_right?('index', params[:controller]) %>
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %> 

<% end %>

